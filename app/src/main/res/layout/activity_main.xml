<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/vertical_page_margin"
    android:paddingLeft="@dimen/horizontal_page_margin"
    android:paddingRight="@dimen/horizontal_page_margin"
    android:paddingTop="@dimen/vertical_page_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:textSize="@dimen/text_medium"
        android:textAllCaps="true"
        android:text="@string/toppings_header" />

    <CheckBox
        android:id="@+id/checkbox_whipped_cream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:textSize="@dimen/text_medium"
        android:text="@string/whipped_cream" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:textSize="@dimen/text_medium"
        android:textAllCaps="true"
        android:text="@string/quantity_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:orientation="horizontal" >

        <Button
            android:layout_width="@dimen/square_button_dimen"
            android:layout_height="@dimen/square_button_dimen"
            android:textAllCaps="true"
            android:textSize="@dimen/text_medium"
            android:text="@string/decrement_button"
            android:onClick="decrement" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_small"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/colorPrimary"
            android:text="@string/quantity" />

        <Button
            android:layout_width="@dimen/square_button_dimen"
            android:layout_height="@dimen/square_button_dimen"
            android:textAllCaps="true"
            android:textSize="@dimen/text_medium"
            android:text="@string/increment_button"
            android:onClick="increment" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:textSize="@dimen/text_medium"
        android:textAllCaps="true"
        android:text="@string/order_summary_header" />

    <TextView
        android:id="@+id/order_summary_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:textSize="@dimen/text_medium"
        android:textColor="@color/colorPrimary"
        android:text="@string/price" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="@dimen/text_medium"
        android:text="@string/order_button"
        android:onClick="submitOrder"/>

</LinearLayout>